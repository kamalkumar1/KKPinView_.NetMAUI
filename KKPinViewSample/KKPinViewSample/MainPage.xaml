<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KKPinViewSample.MainPage"
             Title="KKPinView Sample">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,60,30,30"
            Spacing="25">
            
            <Label
                Text="KKPinView Sample"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center" />

            <Label
                Text="Secure PIN Management Demo"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                HorizontalOptions="Center"
                Margin="0,0,0,20" />

            <!-- PIN Status -->
            <Border
                StrokeThickness="1"
                Stroke="LightGray"
                Padding="15"
                Margin="0,0,0,20">
                <VerticalStackLayout Spacing="10">
                    <Label
                        x:Name="StatusLabel"
                        Text="Checking PIN status..."
                        FontSize="16"
                        HorizontalOptions="Center" />
                    <Label
                        x:Name="PinStatusLabel"
                        Text=""
                        FontSize="14"
                        TextColor="Gray"
                        HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- Setup PIN Button -->
            <Button
                x:Name="SetupPinButton"
                Text="Setup PIN"
                Clicked="OnSetupPinClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#512BD4"
                TextColor="White"
                HeightRequest="50" />

            <!-- Enter PIN Button -->
            <Button
                x:Name="EnterPinButton"
                Text="Enter PIN"
                Clicked="OnEnterPinClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#512BD4"
                TextColor="White"
                HeightRequest="50"
                IsEnabled="False" />

            <!-- Delete PIN Button -->
            <Button
                x:Name="DeletePinButton"
                Text="Delete PIN"
                Clicked="OnDeletePinClicked"
                HorizontalOptions="Fill"
                BackgroundColor="Red"
                TextColor="White"
                HeightRequest="50"
                IsEnabled="False" />

            <!-- Authenticated Content -->
            <Border
                x:Name="AuthenticatedContent"
                StrokeThickness="1"
                Stroke="Green"
                Padding="15"
                Margin="0,20,0,0"
                IsVisible="False">
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="✅ Authenticated"
                        FontSize="18"
                        TextColor="Green"
                        FontAttributes="Bold"
                        HorizontalOptions="Center" />
                    <Label
                        Text="You have successfully authenticated with your PIN!"
                        FontSize="14"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
